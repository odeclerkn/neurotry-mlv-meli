# ====================================
# MercadoLibre OAuth Configuration
# ====================================
# Obtén estas credenciales en: https://developers.mercadolibre.com
MELI_CLIENT_ID=tu_client_id_aqui
MELI_CLIENT_SECRET=tu_client_secret_aqui

# URL de callback (actualizar según tu método de exposición)
# Opción A - ngrok: https://abc123.ngrok.io/auth/callback
# Opción B - Vercel: https://tuapp.vercel.app/auth/callback
# Opción C - Railway: https://tuapp.up.railway.app/auth/callback
REDIRECT_URI=https://abc123.ngrok.io/auth/callback

# ====================================
# Seguridad - Encriptación de Tokens
# ====================================
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANTE: Debe ser de 32 bytes (64 caracteres hexadecimales)
ENCRYPTION_KEY=

# ====================================
# Base de Datos
# ====================================
# PostgreSQL (configurado en docker-compose.yml)
DATABASE_URL=postgresql://postgres:dev123@localhost:5432/mlp_meli

# Redis (configurado en docker-compose.yml)
REDIS_URL=redis://localhost:6379

# ====================================
# Aplicación
# ====================================
NODE_ENV=development
PORT=3000

# ====================================
# API de Trends (opcional - usar cache)
# ====================================
# TTL del cache de trends en segundos (2 horas = 7200)
TRENDS_CACHE_TTL=7200

# ====================================
# Rate Limiting
# ====================================
# Máximo de requests a MELI por minuto
MELI_RATE_LIMIT_PER_MINUTE=10

# ====================================
# Logging (opcional)
# ====================================
LOG_LEVEL=info

# ====================================
# IA - Anthropic Claude (opcional)
# ====================================
# Para análisis inteligente de keywords y sugerencias de optimización
# Obtén tu API key en: https://console.anthropic.com/
# Si no se configura, usará análisis básico sin IA
ANTHROPIC_API_KEY=
